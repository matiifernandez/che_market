<% content_for :page_title, "Categorías" %>

<div class="mb-6 flex justify-end">
  <a href="<%= new_admin_category_path %>" class="inline-flex items-center gap-2 bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg font-medium transition duration-200 cursor-pointer">
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
    </svg>
    Nueva categoría
  </a>
</div>

<div class="bg-white rounded-lg shadow overflow-x-auto" data-controller="confirm-modal">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-4 lg:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nombre</th>
        <th class="px-4 lg:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden sm:table-cell">Slug</th>
        <th class="px-4 lg:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Productos</th>
        <th class="px-4 lg:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @categories.each do |category| %>
        <tr>
          <td class="px-4 lg:px-6 py-4 whitespace-nowrap">
            <div class="flex items-center">
              <span class="p-2 rounded-lg bg-indigo-100 text-indigo-600 mr-3">
                <%= category_icon(category.icon, size: "w-5 h-5") %>
              </span>
              <span class="text-sm font-medium text-gray-900"><%= category.name %></span>
            </div>
          </td>
          <td class="px-4 lg:px-6 py-4 whitespace-nowrap text-sm text-gray-500 hidden sm:table-cell">
            <%= category.slug %>
          </td>
          <td class="px-4 lg:px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <%= category.products.count %>
          </td>
          <td class="px-4 lg:px-6 py-4 whitespace-nowrap text-sm space-x-1 lg:space-x-2">
            <a href="<%= admin_category_path(category) %>" class="text-indigo-600 hover:text-indigo-800">Ver</a>
            <a href="<%= edit_admin_category_path(category) %>" class="text-indigo-600 hover:text-indigo-800 hidden sm:inline">Editar</a>
            <button type="button"
                    data-action="confirm-modal#open"
                    data-confirm-modal-title-param="Eliminar categoría"
                    data-confirm-modal-message-param="¿Estás seguro de que deseas eliminar la categoría '<%= category.name %>'? Esta acción no se puede deshacer."
                    data-confirm-modal-url-param="<%= admin_category_path(category) %>"
                    class="text-red-600 hover:text-red-800 cursor-pointer hidden sm:inline">
              Eliminar
            </button>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= render "shared/confirm_modal" %>
</div>
