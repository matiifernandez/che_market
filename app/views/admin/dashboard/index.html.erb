<% content_for :page_title, "Dashboard" %>

<!-- Stats cards -->
<div class="grid grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6 mb-8">
  <!-- Productos -->
  <div class="bg-white rounded-lg shadow p-4 sm:p-6">
    <div class="flex items-center">
      <div class="p-2 sm:p-3 rounded-full bg-indigo-100 text-indigo-600">
        <svg class="h-6 w-6 sm:h-8 sm:w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
        </svg>
      </div>
      <div class="ml-3 sm:ml-4">
        <p class="text-xs sm:text-sm font-medium text-gray-500">Productos</p>
        <p class="text-xl sm:text-2xl font-semibold text-gray-900"><%= @products_count %></p>
      </div>
    </div>
  </div>

  <!-- Órdenes -->
  <div class="bg-white rounded-lg shadow p-4 sm:p-6">
    <div class="flex items-center">
      <div class="p-2 sm:p-3 rounded-full bg-yellow-100 text-yellow-600">
        <svg class="h-6 w-6 sm:h-8 sm:w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
        </svg>
      </div>
      <div class="ml-3 sm:ml-4">
        <p class="text-xs sm:text-sm font-medium text-gray-500">Ordenes</p>
        <p class="text-xl sm:text-2xl font-semibold text-gray-900"><%= @orders_count %></p>
      </div>
    </div>
  </div>

  <!-- Ingresos -->
  <div class="bg-white rounded-lg shadow p-4 sm:p-6">
    <div class="flex items-center">
      <div class="p-2 sm:p-3 rounded-full bg-green-100 text-green-600">
        <svg class="h-6 w-6 sm:h-8 sm:w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <div class="ml-3 sm:ml-4">
        <p class="text-xs sm:text-sm font-medium text-gray-500">Ingresos</p>
        <p class="text-xl sm:text-2xl font-semibold text-gray-900"><%= humanized_money_with_symbol(@total_revenue) %></p>
      </div>
    </div>
  </div>

  <!-- Categorías -->
  <div class="bg-white rounded-lg shadow p-4 sm:p-6">
    <div class="flex items-center">
      <div class="p-2 sm:p-3 rounded-full bg-purple-100 text-purple-600">
        <svg class="h-6 w-6 sm:h-8 sm:w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
        </svg>
      </div>
      <div class="ml-3 sm:ml-4">
        <p class="text-xs sm:text-sm font-medium text-gray-500">Categorias</p>
        <p class="text-xl sm:text-2xl font-semibold text-gray-900"><%= @categories_count %></p>
      </div>
    </div>
  </div>
</div>

<!-- Main content: Orders + Alerts -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <!-- Recent Orders (2/3 width on desktop) -->
  <div class="lg:col-span-2 bg-white rounded-lg shadow">
    <div class="px-4 sm:px-6 py-4 border-b border-gray-200 flex justify-between items-center">
      <h2 class="text-lg font-semibold text-gray-900">Ordenes recientes</h2>
      <a href="<%= admin_orders_path %>" class="text-indigo-600 hover:text-indigo-800 text-sm font-medium">
        Ver todas
      </a>
    </div>

    <% if @recent_orders.any? %>
      <div class="divide-y divide-gray-200">
        <% @recent_orders.each do |order| %>
          <a href="<%= admin_order_path(order) %>" class="block px-4 sm:px-6 py-4 hover:bg-gray-50 transition">
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-3 sm:gap-4 min-w-0">
                <div class="flex-shrink-0">
                  <div class="w-10 h-10 rounded-full bg-gray-100 flex items-center justify-center">
                    <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                    </svg>
                  </div>
                </div>
                <div class="min-w-0">
                  <p class="font-medium text-gray-900 truncate">#<%= order.id %> - <%= order.email.split('@').first %>...</p>
                  <p class="text-sm text-gray-500"><%= order.created_at.strftime("%d/%m/%Y %H:%M") %></p>
                </div>
              </div>
              <div class="flex items-center gap-2 sm:gap-4 flex-shrink-0 ml-2">
                <% status_colors = {
                  'pending' => 'bg-yellow-100 text-yellow-800',
                  'paid' => 'bg-blue-100 text-blue-800',
                  'shipped' => 'bg-purple-100 text-purple-800',
                  'delivered' => 'bg-green-100 text-green-800',
                  'cancelled' => 'bg-red-100 text-red-800'
                } %>
                <span class="hidden sm:inline-flex px-2 py-1 text-xs font-semibold rounded-full <%= status_colors[order.status] %>">
                  <%= order.status.capitalize %>
                </span>
                <span class="font-semibold text-gray-900 text-sm sm:text-base"><%= humanized_money_with_symbol(order.total) %></span>
              </div>
            </div>
          </a>
        <% end %>
      </div>
    <% else %>
      <div class="px-6 py-12 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
        </svg>
        <p class="mt-4 text-gray-500">No hay ordenes todavia</p>
      </div>
    <% end %>
  </div>

  <!-- Alerts (1/3 width on desktop) -->
  <div class="space-y-6">
    <!-- Pending Orders Alert -->
    <% if @pending_orders > 0 %>
      <a href="<%= admin_orders_path %>" class="block bg-yellow-50 border border-yellow-200 rounded-lg p-4 hover:bg-yellow-100 transition">
        <div class="flex items-center gap-3">
          <div class="p-2 rounded-full bg-yellow-100">
            <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <p class="font-semibold text-yellow-800"><%= @pending_orders %> orden<%= @pending_orders > 1 ? 'es' : '' %> pendiente<%= @pending_orders > 1 ? 's' : '' %></p>
            <p class="text-sm text-yellow-600">Requieren atencion</p>
          </div>
        </div>
      </a>
    <% end %>

    <!-- Pending Reviews Alert -->
    <% if @pending_reviews > 0 %>
      <a href="<%= admin_reviews_path(status: 'pending') %>" class="block bg-blue-50 border border-blue-200 rounded-lg p-4 hover:bg-blue-100 transition">
        <div class="flex items-center gap-3">
          <div class="p-2 rounded-full bg-blue-100">
            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
            </svg>
          </div>
          <div>
            <p class="font-semibold text-blue-800"><%= @pending_reviews %> review<%= @pending_reviews > 1 ? 's' : '' %> pendiente<%= @pending_reviews > 1 ? 's' : '' %></p>
            <p class="text-sm text-blue-600">Por moderar</p>
          </div>
        </div>
      </a>
    <% end %>

    <!-- Out of Stock Alert -->
    <% if @out_of_stock_products > 0 %>
      <div class="bg-red-50 border border-red-200 rounded-lg p-4">
        <div class="flex items-center gap-3">
          <div class="p-2 rounded-full bg-red-100">
            <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
          </div>
          <div>
            <p class="font-semibold text-red-800"><%= @out_of_stock_products %> producto<%= @out_of_stock_products > 1 ? 's' : '' %> sin stock</p>
            <p class="text-sm text-red-600">Requieren reposicion</p>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Low Stock Products -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-4 py-3 border-b border-gray-200">
        <h3 class="font-semibold text-gray-900">Stock bajo</h3>
      </div>
      <% if @low_stock_products.any? %>
        <div class="divide-y divide-gray-200">
          <% @low_stock_products.each do |product| %>
            <a href="<%= edit_admin_product_path(product) %>" class="block px-4 py-3 hover:bg-gray-50 transition">
              <div class="flex items-center justify-between">
                <p class="text-sm font-medium text-gray-900 truncate pr-2"><%= product.name %></p>
                <span class="flex-shrink-0 px-2 py-1 text-xs font-semibold rounded-full <%= product.stock <= 2 ? 'bg-red-100 text-red-800' : 'bg-yellow-100 text-yellow-800' %>">
                  <%= product.stock %> uds
                </span>
              </div>
            </a>
          <% end %>
        </div>
      <% else %>
        <div class="px-4 py-6 text-center">
          <svg class="mx-auto h-8 w-8 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <p class="mt-2 text-sm text-gray-500">Todo el stock esta bien</p>
        </div>
      <% end %>
    </div>

    <!-- No alerts message -->
    <% if @pending_orders == 0 && @pending_reviews == 0 && @out_of_stock_products == 0 && @low_stock_products.empty? %>
      <div class="bg-green-50 border border-green-200 rounded-lg p-4">
        <div class="flex items-center gap-3">
          <div class="p-2 rounded-full bg-green-100">
            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <div>
            <p class="font-semibold text-green-800">Todo en orden</p>
            <p class="text-sm text-green-600">No hay alertas pendientes</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
