<div class="mb-6">
  <%= link_to "â† #{t('admin.gift_cards.back_to_list')}", admin_gift_cards_path, class: "text-indigo-600 hover:text-indigo-800" %>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6" data-controller="confirm-modal">
  <!-- Main Info -->
  <div class="lg:col-span-2 space-y-6">
    <!-- Gift Card Details -->
    <div class="bg-white rounded-lg shadow-sm overflow-hidden">
      <div class="bg-gradient-to-br from-indigo-500 to-purple-600 p-6 text-white">
        <div class="flex justify-between items-start">
          <div>
            <p class="text-indigo-100 text-sm mb-1"><%= t('admin.gift_cards.code') %></p>
            <p class="text-2xl font-mono font-bold"><%= @gift_card.code %></p>
          </div>
          <% status_colors = {
            'pending' => 'bg-yellow-500',
            'active' => 'bg-green-500',
            'depleted' => 'bg-gray-500',
            'expired' => 'bg-red-500',
            'cancelled' => 'bg-red-700'
          } %>
          <span class="px-3 py-1 rounded-full text-sm font-medium <%= status_colors[@gift_card.status] %>">
            <%= t("gift_cards.statuses.#{@gift_card.status}") %>
          </span>
        </div>
      </div>

      <div class="p-6 grid grid-cols-2 gap-6">
        <div>
          <p class="text-sm text-gray-500 mb-1"><%= t('admin.gift_cards.initial_amount') %></p>
          <p class="text-xl font-bold text-gray-900"><%= @gift_card.formatted_initial_amount %></p>
        </div>
        <div>
          <p class="text-sm text-gray-500 mb-1"><%= t('admin.gift_cards.current_balance') %></p>
          <p class="text-xl font-bold <%= @gift_card.balance_cents > 0 ? 'text-green-600' : 'text-gray-500' %>"><%= @gift_card.formatted_balance %></p>
        </div>
      </div>
    </div>

    <!-- Recipient Info -->
    <div class="bg-white rounded-lg shadow-sm p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4"><%= t('admin.gift_cards.recipient_info') %></h3>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div>
          <p class="text-sm text-gray-500"><%= t('admin.gift_cards.recipient_email') %></p>
          <p class="font-medium"><%= @gift_card.recipient_email %></p>
        </div>
        <div>
          <p class="text-sm text-gray-500"><%= t('admin.gift_cards.recipient_name') %></p>
          <p class="font-medium"><%= @gift_card.recipient_name || '-' %></p>
        </div>
        <% if @gift_card.message.present? %>
          <div class="sm:col-span-2">
            <p class="text-sm text-gray-500"><%= t('admin.gift_cards.message') %></p>
            <p class="font-medium bg-gray-50 p-3 rounded-lg mt-1"><%= @gift_card.message %></p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Purchaser Info -->
    <div class="bg-white rounded-lg shadow-sm p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4"><%= t('admin.gift_cards.purchaser_info') %></h3>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div>
          <p class="text-sm text-gray-500"><%= t('admin.gift_cards.purchaser_email') %></p>
          <p class="font-medium"><%= @gift_card.purchaser_email %></p>
        </div>
        <% if @gift_card.purchaser.present? %>
          <div>
            <p class="text-sm text-gray-500"><%= t('admin.gift_cards.purchaser_account') %></p>
            <p class="font-medium"><%= @gift_card.purchaser.email %></p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Transaction History -->
    <div class="bg-white rounded-lg shadow-sm p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4"><%= t('admin.gift_cards.transaction_history') %></h3>

      <% if @transactions.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase"><%= t('admin.gift_cards.date') %></th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase"><%= t('admin.gift_cards.type') %></th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase"><%= t('admin.gift_cards.amount') %></th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase hidden sm:table-cell"><%= t('admin.gift_cards.balance_after') %></th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase hidden md:table-cell"><%= t('admin.gift_cards.order') %></th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% @transactions.each do |transaction| %>
                <tr>
                  <td class="px-4 py-3 text-sm text-gray-500"><%= transaction.created_at.strftime("%d/%m/%Y %H:%M") %></td>
                  <td class="px-4 py-3">
                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full <%= transaction.redemption? ? 'bg-red-100 text-red-800' : 'bg-green-100 text-green-800' %>">
                      <%= t("gift_cards.transaction_types.#{transaction.transaction_type}") %>
                    </span>
                  </td>
                  <td class="px-4 py-3 text-sm font-medium <%= transaction.redemption? ? 'text-red-600' : 'text-green-600' %>">
                    <%= transaction.redemption? ? '-' : '+' %><%= humanized_money_with_symbol(Money.new(transaction.amount_cents, 'USD')) %>
                  </td>
                  <td class="px-4 py-3 text-sm text-gray-900 hidden sm:table-cell">
                    <%= humanized_money_with_symbol(Money.new(transaction.balance_after_cents, 'USD')) %>
                  </td>
                  <td class="px-4 py-3 text-sm hidden md:table-cell">
                    <% if transaction.order.present? %>
                      <%= link_to "##{transaction.order.id}", admin_order_path(transaction.order), class: "text-indigo-600 hover:text-indigo-900" %>
                    <% else %>
                      -
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-gray-500 text-center py-4"><%= t('admin.gift_cards.no_transactions') %></p>
      <% end %>
    </div>
  </div>

  <!-- Sidebar -->
  <div class="space-y-6">
    <!-- Dates -->
    <div class="bg-white rounded-lg shadow-sm p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4"><%= t('admin.gift_cards.dates') %></h3>
      <div class="space-y-3">
        <div>
          <p class="text-sm text-gray-500"><%= t('admin.gift_cards.created_at') %></p>
          <p class="font-medium"><%= @gift_card.created_at.strftime("%d/%m/%Y %H:%M") %></p>
        </div>
        <% if @gift_card.purchased_at.present? %>
          <div>
            <p class="text-sm text-gray-500"><%= t('admin.gift_cards.purchased_at') %></p>
            <p class="font-medium"><%= @gift_card.purchased_at.strftime("%d/%m/%Y %H:%M") %></p>
          </div>
        <% end %>
        <% if @gift_card.delivered_at.present? %>
          <div>
            <p class="text-sm text-gray-500"><%= t('admin.gift_cards.delivered_at') %></p>
            <p class="font-medium"><%= @gift_card.delivered_at.strftime("%d/%m/%Y %H:%M") %></p>
          </div>
        <% end %>
        <% if @gift_card.first_used_at.present? %>
          <div>
            <p class="text-sm text-gray-500"><%= t('admin.gift_cards.first_used_at') %></p>
            <p class="font-medium"><%= @gift_card.first_used_at.strftime("%d/%m/%Y %H:%M") %></p>
          </div>
        <% end %>
        <% if @gift_card.expires_at.present? %>
          <div>
            <p class="text-sm text-gray-500"><%= t('admin.gift_cards.expires_at') %></p>
            <p class="font-medium <%= @gift_card.expired? ? 'text-red-600' : '' %>"><%= @gift_card.expires_at.strftime("%d/%m/%Y") %></p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Actions -->
    <div class="bg-white rounded-lg shadow-sm p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4"><%= t('admin.gift_cards.actions') %></h3>
      <div class="space-y-3">
        <% if @gift_card.active? || @gift_card.depleted? %>
          <%= button_to t('admin.gift_cards.resend_email'), resend_email_admin_gift_card_path(@gift_card),
              method: :post,
              class: "w-full px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition cursor-pointer" %>
        <% end %>

        <% unless @gift_card.cancelled? %>
          <button type="button"
                  data-action="confirm-modal#open"
                  data-confirm-modal-title-param="<%= t('admin.gift_cards.cancel_gift_card') %>"
                  data-confirm-modal-message-param="<%= t('admin.gift_cards.cancel_confirm') %>"
                  data-confirm-modal-url-param="<%= cancel_admin_gift_card_path(@gift_card) %>"
                  data-confirm-modal-method-param="post"
                  data-confirm-modal-button-param="<%= t('admin.gift_cards.cancel_gift_card') %>"
                  class="w-full px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition cursor-pointer">
            <%= t('admin.gift_cards.cancel_gift_card') %>
          </button>
        <% end %>
      </div>
    </div>

    <!-- Stripe Info -->
    <% if @gift_card.stripe_session_id.present? %>
      <div class="bg-white rounded-lg shadow-sm p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Stripe</h3>
        <div>
          <p class="text-sm text-gray-500">Session ID</p>
          <p class="font-mono text-xs break-all"><%= @gift_card.stripe_session_id %></p>
        </div>
      </div>
    <% end %>
  </div>

  <%= render "shared/confirm_modal" %>
</div>
