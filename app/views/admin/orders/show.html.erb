<% content_for :page_title, "Orden ##{@order.id}" %>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <!-- Detalles de la orden -->
  <div class="lg:col-span-2 space-y-6">
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Informaci√≥n del cliente</h2>
      <div class="space-y-2 text-sm">
        <p><span class="font-medium text-gray-700">Email:</span> <%= @order.email %></p>
        <p><span class="font-medium text-gray-700">Usuario:</span> <%= @order.user&.email || "Guest" %></p>
        <p><span class="font-medium text-gray-700">Fecha:</span> <%= @order.created_at.strftime("%d/%m/%Y") %></p>
      </div>
    </div>

    <!-- Productos de la orden -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Productos</h2>
      </div>

      <% if @order.line_items.any? %>
        <div class="divide-y divide-gray-200">
          <% @order.line_items.includes(:product).each do |item| %>
            <div class="px-6 py-4 flex items-center justify-between">
              <div class="flex items-center">
                <div class="w-12 h-12 bg-gray-200 rounded-lg overflow-hidden flex-shrink-0">
                  <% if item.product&.images&.attached? %>
                    <%= image_tag item.product.images.first, class: "w-full h-full object-cover" %>
                  <% else %>
                    <div class="w-full h-full flex items-center justify-center">
                      <span class="text-lg">üì¶</span>
                    </div>
                  <% end %>
                </div>
                <div class="ml-4">
                  <p class="font-medium text-gray-900"><%= item.product&.name || "Producto eliminado" %></p>
                  <p class="text-sm text-gray-500">Cantidad: <%= item.quantity %></p>
                </div>
              </div>
              <div class="text-right">
                <p class="text-sm text-gray-500"><%= humanized_money_with_symbol(item.price) %> c/u</p>
                <p class="font-semibold text-gray-900"><%= humanized_money_with_symbol(item.subtotal) %></p>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="px-6 py-8 text-center text-gray-500">
          <p>No hay detalles de productos disponibles para esta orden.</p>
          <p class="text-sm mt-1">(√ìrdenes anteriores a esta actualizaci√≥n no tienen line items)</p>
        </div>
      <% end %>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">ID de Stripe</h2>
      <p class="text-sm text-gray-600 break-all"><%= @order.stripe_session_id %></p>
    </div>
  </div>

  <!-- Resumen y estado -->
  <div class="space-y-6">
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Resumen</h2>
      <div class="space-y-3">
        <div class="flex justify-between">
          <span class="text-gray-600">Total</span>
          <span class="font-bold text-lg"><%= humanized_money_with_symbol(@order.total) %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-gray-600">Estado</span>
          <%= render "order_status_badge", status: @order.status %>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Actualizar estado</h2>
      <%= form_with model: [:admin, @order], data: { turbo: false } do |f| %>
        <%= f.select :status, Order.statuses.keys.map { |s| [s.humanize, s] }, {}, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 mb-4" %>
        <%= f.submit "Actualizar", class: "w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-200 cursor-pointer" %>
      <% end %>
    </div>

    <a href="<%= admin_orders_path %>" class="block text-center text-indigo-600 hover:text-indigo-800">
      ‚Üê Volver a √≥rdenes
    </a>
  </div>
</div>
