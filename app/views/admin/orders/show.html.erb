<% content_for :page_title, "Orden ##{@order.id}" %>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <!-- Detalles de la orden -->
  <div class="lg:col-span-2 space-y-6">
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Información del cliente</h2>
      <div class="space-y-2 text-sm">
        <p><span class="font-medium text-gray-700">Email:</span> <%= @order.email %></p>
        <p><span class="font-medium text-gray-700">Usuario:</span> <%= @order.user&.email || "Guest" %></p>
        <p><span class="font-medium text-gray-700">Fecha:</span> <%= @order.created_at.strftime("%d/%m/%Y %H:%M") %></p>
      </div>
    </div>

    <!-- Productos de la orden -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Productos</h2>
      </div>

      <% if @order.line_items.any? %>
        <div class="divide-y divide-gray-200">
          <% @order.line_items.includes(:product).each do |item| %>
            <div class="px-6 py-4 flex items-center justify-between">
              <div class="flex items-center">
                <div class="w-12 h-12 bg-gray-100 rounded-lg overflow-hidden flex-shrink-0">
                  <% if item.product&.images&.attached? %>
                    <%= image_tag item.product.images.first, class: "w-full h-full object-cover" %>
                  <% else %>
                    <div class="w-full h-full flex items-center justify-center">
                      <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                      </svg>
                    </div>
                  <% end %>
                </div>
                <div class="ml-4">
                  <p class="font-medium text-gray-900"><%= item.product&.name || "Producto eliminado" %></p>
                  <p class="text-sm text-gray-500">Cantidad: <%= item.quantity %></p>
                </div>
              </div>
              <div class="text-right">
                <p class="text-sm text-gray-500"><%= humanized_money_with_symbol(item.price) %> c/u</p>
                <p class="font-semibold text-gray-900"><%= humanized_money_with_symbol(item.subtotal) %></p>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="px-6 py-8 text-center text-gray-500">
          <p>No hay detalles de productos disponibles para esta orden.</p>
          <p class="text-sm mt-1">(Órdenes anteriores a esta actualización no tienen line items)</p>
        </div>
      <% end %>
    </div>

    <!-- Tracking Info (si está enviado) -->
    <% if @order.shipped? || @order.delivered? %>
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Información de envío</h2>
        <div class="space-y-3 text-sm">
          <% if @order.tracking_number.present? %>
            <div class="flex justify-between items-center">
              <span class="font-medium text-gray-700">Carrier:</span>
              <span class="text-gray-900"><%= carrier_name(@order.carrier) %></span>
            </div>
            <div class="flex justify-between items-center">
              <span class="font-medium text-gray-700">Número de seguimiento:</span>
              <%= tracking_link(@order.carrier, @order.tracking_number, class: "font-mono text-indigo-600 hover:text-indigo-800") %>
            </div>
          <% else %>
            <p class="text-gray-500">Sin número de seguimiento asignado</p>
          <% end %>
          <% if @order.shipped_at.present? %>
            <div class="flex justify-between items-center">
              <span class="font-medium text-gray-700">Fecha de envío:</span>
              <span class="text-gray-900"><%= @order.shipped_at.strftime("%d/%m/%Y %H:%M") %></span>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">ID de Stripe</h2>
      <p class="text-sm text-gray-600 break-all font-mono"><%= @order.stripe_session_id %></p>
    </div>
  </div>

  <!-- Resumen y estado -->
  <div class="space-y-6">
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Resumen</h2>
      <div class="space-y-3">
        <div class="flex justify-between">
          <span class="text-gray-600">Total</span>
          <span class="font-bold text-lg"><%= humanized_money_with_symbol(@order.total) %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-gray-600">Estado</span>
          <%= render "order_status_badge", status: @order.status %>
        </div>
      </div>
    </div>

    <div data-controller="shipping-form">
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Actualizar pedido</h2>
        <%= form_with model: [:admin, @order], data: { turbo: false, shipping_form_target: "form" }, class: "space-y-4" do |f| %>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Estado</label>
            <%= f.select :status, Order.statuses.keys.map { |s| [s.humanize, s] }, {}, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500", data: { shipping_form_target: "status" } %>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Carrier</label>
            <%= f.select :carrier, carrier_options_for_select, { include_blank: "Seleccionar carrier..." }, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500", data: { shipping_form_target: "carrier" } %>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Número de seguimiento</label>
            <%= f.text_field :tracking_number, placeholder: "Ej: 1Z999AA10123456784", class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500", data: { shipping_form_target: "trackingNumber" } %>
            <p class="mt-1 text-xs text-gray-500">Al cambiar a "Shipped" se enviará un email al cliente con esta información</p>
          </div>

          <%= f.submit "Actualizar", class: "w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-200 cursor-pointer" %>
        <% end %>
      </div>

      <!-- Warning Modal - Outside the card for proper z-index -->
      <div data-shipping-form-target="warningModal" class="hidden fixed inset-0 z-[9999] overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
        <div class="flex items-center justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:p-0">
          <div class="fixed inset-0 bg-gray-900/40 backdrop-blur-sm transition-opacity" aria-hidden="true" data-action="click->shipping-form#hideWarning"></div>
          <div class="relative inline-block bg-white rounded-xl px-4 pt-5 pb-4 text-left overflow-hidden shadow-2xl ring-1 ring-gray-900/10 transform transition-all sm:my-8 sm:max-w-lg sm:w-full sm:p-6">
            <div class="sm:flex sm:items-start">
              <div class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-yellow-100 sm:mx-0 sm:h-10 sm:w-10">
                <svg class="h-6 w-6 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                </svg>
              </div>
              <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">
                  Sin número de seguimiento
                </h3>
                <div class="mt-2">
                  <p class="text-sm text-gray-500">
                    Estás marcando este pedido como "Shipped" sin un número de seguimiento. El cliente recibirá el email de envío pero no podrá rastrear su pedido.
                  </p>
                  <p class="text-sm text-gray-500 mt-2">
                    ¿Deseas continuar sin tracking o prefieres agregar la información primero?
                  </p>
                </div>
              </div>
            </div>
            <div class="mt-5 sm:mt-4 sm:flex sm:flex-row-reverse gap-3">
              <button type="button" data-action="click->shipping-form#continueWithoutTracking" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-yellow-600 text-base font-medium text-white hover:bg-yellow-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500 sm:w-auto sm:text-sm">
                Continuar sin tracking
              </button>
              <button type="button" data-action="click->shipping-form#goBack" class="mt-3 sm:mt-0 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:w-auto sm:text-sm">
                Agregar tracking
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <a href="<%= admin_orders_path %>" class="block text-center text-indigo-600 hover:text-indigo-800">
      ← Volver a órdenes
    </a>
  </div>
</div>
