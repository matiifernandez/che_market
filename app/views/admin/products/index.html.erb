<% content_for :page_title, "Productos" %>

<div class="mb-6 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
  <!-- Search bar -->
  <div class="w-full sm:w-80" data-controller="search" data-search-url-value="<%= admin_products_path %>">
    <div class="relative">
      <input
        type="text"
        data-search-target="input"
        data-action="input->search#search"
        placeholder="Buscar productos..."
        value="<%= @query %>"
        class="w-full pl-10 pr-10 py-2 border border-gray-300 rounded-lg focus:border-gray-400 focus:ring-0 focus:outline-none transition"
      >
      <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
      </svg>
      <% if @query.present? %>
        <button type="button" data-action="search#clear" class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600 transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      <% end %>
    </div>
  </div>

  <a href="<%= new_admin_product_path %>" class="inline-flex items-center justify-center gap-2 bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg font-medium transition duration-200 cursor-pointer">
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
    </svg>
    Nuevo producto
  </a>
</div>

<%= turbo_frame_tag "products-grid" do %>
  <% if @query.present? %>
    <p class="text-gray-600 mb-4">
      <%= @products.count %> resultado<%= @products.count != 1 ? 's' : '' %> para "<strong><%= @query %></strong>"
    </p>
  <% end %>

  <div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-3 sm:px-4 lg:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Producto</th>
            <th class="px-3 sm:px-4 lg:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden lg:table-cell">CategorÃ­a</th>
            <th class="px-3 sm:px-4 lg:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Precio</th>
            <th class="px-3 sm:px-4 lg:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden md:table-cell">Stock</th>
            <th class="px-3 sm:px-4 lg:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden sm:table-cell">Estado</th>
            <th class="px-3 sm:px-4 lg:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">AcciÃ³n</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% if @products.any? %>
            <% @products.each do |product| %>
              <tr>
                <td class="px-3 sm:px-4 lg:px-6 py-3 sm:py-4">
                  <div class="flex items-center">
                    <div class="w-8 h-8 sm:w-10 sm:h-10 bg-gray-200 rounded-lg overflow-hidden flex-shrink-0">
                      <% if product.images.attached? %>
                        <%= image_tag product.images.first, class: "w-full h-full object-cover" %>
                      <% else %>
                        <div class="w-full h-full flex items-center justify-center">
                          <span class="text-sm sm:text-lg">ðŸ“¦</span>
                        </div>
                      <% end %>
                    </div>
                    <div class="ml-2 sm:ml-4 min-w-0">
                      <div class="text-xs sm:text-sm font-medium text-gray-900 truncate max-w-[100px] sm:max-w-none"><%= product.name %></div>
                    </div>
                  </div>
                </td>
                <td class="px-3 sm:px-4 lg:px-6 py-3 sm:py-4 whitespace-nowrap text-sm text-gray-500 hidden lg:table-cell">
                  <%= product.category&.name || "-" %>
                </td>
                <td class="px-3 sm:px-4 lg:px-6 py-3 sm:py-4 whitespace-nowrap text-xs sm:text-sm font-semibold text-gray-900">
                  <%= humanized_money_with_symbol(product.price) %>
                </td>
                <td class="px-3 sm:px-4 lg:px-6 py-3 sm:py-4 whitespace-nowrap text-sm text-gray-500 hidden md:table-cell">
                  <%= product.stock %>
                </td>
                <td class="px-3 sm:px-4 lg:px-6 py-3 sm:py-4 whitespace-nowrap hidden sm:table-cell">
                  <% if product.active? %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      Activo
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                      Inactivo
                    </span>
                  <% end %>
                </td>
                <td class="px-3 sm:px-4 lg:px-6 py-3 sm:py-4 whitespace-nowrap text-sm">
                  <a href="<%= admin_product_path(product) %>" class="text-indigo-600 hover:text-indigo-800" data-turbo-frame="_top">Ver</a>
                  <a href="<%= edit_admin_product_path(product) %>" class="text-indigo-600 hover:text-indigo-800 hidden sm:inline ml-2" data-turbo-frame="_top">Editar</a>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="6" class="px-6 py-12 text-center text-gray-500">
                No se encontraron productos
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <%= render 'shared/pagination', pagy: @pagy %>
<% end %>
