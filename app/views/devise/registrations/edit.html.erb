<div class="min-h-[60vh] flex items-center justify-center">
  <div class="w-full max-w-md">
    <div class="bg-white rounded-2xl shadow-xl p-8">
      <div class="text-center mb-8">
        <h2 class="text-3xl font-bold text-gray-900">Editar perfil</h2>
        <p class="text-gray-500 mt-2"><%= resource.email %></p>
      </div>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification message: "Por favor corregí los siguientes errores:" %>

        <div class="space-y-5">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      label: "Email",
                      input_html: {
                        autocomplete: "email",
                        class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition"
                      },
                      label_html: { class: "block text-sm font-medium text-gray-700 mb-1" } %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="bg-yellow-50 border border-yellow-200 text-yellow-800 px-4 py-3 rounded-lg text-sm">
              Esperando confirmación para: <strong><%= resource.unconfirmed_email %></strong>
            </div>
          <% end %>

          <div class="border-t border-gray-200 pt-5">
            <p class="text-sm text-gray-500 mb-4">Dejá en blanco si no querés cambiar la contraseña</p>

            <%= f.input :password,
                        required: false,
                        label: "Nueva contraseña",
                        hint: false,
                        placeholder: "Nueva contraseña (opcional)",
                        input_html: {
                          autocomplete: "new-password",
                          class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition"
                        },
                        label_html: { class: "block text-sm font-medium text-gray-700 mb-1" } %>

            <%= f.input :password_confirmation,
                        required: false,
                        label: "Confirmar nueva contraseña",
                        placeholder: "Confirmar nueva contraseña",
                        input_html: {
                          autocomplete: "new-password",
                          class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition"
                        },
                        label_html: { class: "block text-sm font-medium text-gray-700 mb-1" } %>
          </div>

          <div class="border-t border-gray-200 pt-5">
            <%= f.input :current_password,
                        required: true,
                        label: "Contraseña actual",
                        hint: false,
                        placeholder: "Necesitamos tu contraseña actual para confirmar",
                        input_html: {
                          autocomplete: "current-password",
                          class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition"
                        },
                        label_html: { class: "block text-sm font-medium text-gray-700 mb-1" } %>
          </div>
        </div>

        <div class="mt-8">
          <%= f.button :submit, "Guardar cambios", class: "w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-3 px-6 rounded-lg transition duration-200" %>
        </div>
      <% end %>

      <div class="mt-8 pt-6 border-t border-gray-200">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Eliminar cuenta</h3>
        <p class="text-sm text-gray-500 mb-4">Una vez eliminada, no podrás recuperar tu cuenta.</p>
        <%= button_to "Eliminar mi cuenta", registration_path(resource_name),
            method: :delete,
            data: { turbo_confirm: "¿Estás seguro? Esta acción no se puede deshacer." },
            class: "w-full bg-red-600 hover:bg-red-700 text-white font-semibold py-3 px-6 rounded-lg transition duration-200" %>
      </div>

      <div class="mt-6 text-center">
        <%= link_to "← Volver", :back, class: "text-gray-500 hover:text-gray-700 text-sm transition" %>
      </div>
    </div>
  </div>
</div>
