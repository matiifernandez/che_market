<div class="space-y-2">
  <%- if controller_name != 'sessions' %>
    <%= link_to t('auth.login_button'), new_session_path(resource_name), class: "text-indigo-600 hover:text-indigo-800 transition" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <% if controller_name != 'sessions' %><span class="text-gray-300 mx-2">|</span><% end %>
    <%= link_to t('auth.register_button'), new_registration_path(resource_name), class: "text-indigo-600 hover:text-indigo-800 transition" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div class="pt-2">
      <%= link_to t('auth.forgot_password'), new_password_path(resource_name), class: "text-gray-500 hover:text-gray-700 text-sm transition" %>
    </div>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div class="pt-1">
      <%= link_to t('auth.no_confirmation_email'), new_confirmation_path(resource_name), class: "text-gray-500 hover:text-gray-700 text-sm transition" %>
    </div>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div class="pt-1">
      <%= link_to t('auth.no_unlock_instructions'), new_unlock_path(resource_name), class: "text-gray-500 hover:text-gray-700 text-sm transition" %>
    </div>
  <% end %>
</div>
