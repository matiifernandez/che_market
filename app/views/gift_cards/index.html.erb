<div class="max-w-4xl mx-auto">
  <div class="text-center mb-12">
    <h1 class="text-3xl font-bold text-gray-900 mb-4"><%= t('gift_cards.title') %></h1>
    <p class="text-lg text-gray-600"><%= t('gift_cards.subtitle') %></p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
    <% @amounts.each do |amount| %>
      <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition duration-300 group">
        <div class="bg-gradient-to-br from-indigo-500 to-purple-600 p-8 text-center text-white">
          <div class="text-5xl font-bold mb-2">
            <%= humanized_money_with_symbol(amount[:money]) %>
          </div>
          <p class="text-indigo-100"><%= t('gift_cards.gift_card') %></p>
        </div>
        <div class="p-6">
          <p class="text-gray-600 text-center mb-6"><%= t('gift_cards.gift_description', amount: humanized_money_with_symbol(amount[:money])) %></p>
          <%= link_to new_gift_card_path(amount: amount[:cents]),
              class: "block w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-3 px-6 rounded-lg transition duration-200 text-center" do %>
            <%= t('gift_cards.select') %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="bg-gray-100 rounded-xl p-8">
    <h2 class="text-xl font-semibold text-gray-900 mb-4 text-center"><%= t('gift_cards.how_it_works') %></h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="text-center">
        <div class="w-12 h-12 bg-indigo-100 rounded-full flex items-center justify-center mx-auto mb-3">
          <span class="text-indigo-600 font-bold">1</span>
        </div>
        <p class="text-gray-600"><%= t('gift_cards.step_1_desc') %></p>
      </div>
      <div class="text-center">
        <div class="w-12 h-12 bg-indigo-100 rounded-full flex items-center justify-center mx-auto mb-3">
          <span class="text-indigo-600 font-bold">2</span>
        </div>
        <p class="text-gray-600"><%= t('gift_cards.step_2_desc') %></p>
      </div>
      <div class="text-center">
        <div class="w-12 h-12 bg-indigo-100 rounded-full flex items-center justify-center mx-auto mb-3">
          <span class="text-indigo-600 font-bold">3</span>
        </div>
        <p class="text-gray-600"><%= t('gift_cards.step_3_desc') %></p>
      </div>
    </div>
  </div>

  <div class="mt-8 text-center">
    <%= link_to t('gift_cards.check_balance_link'), check_balance_gift_cards_path, class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
  </div>
</div>
