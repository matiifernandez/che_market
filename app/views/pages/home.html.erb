<% content_for :meta_tags do %>
  <%= meta_tags(
    title: t('seo.home_title'),
    description: t('seo.home_description')
  ) %>
<% end %>

<!-- Hero Section -->
<div class="text-center py-16">
  <h1 class="text-5xl font-bold text-gray-900 mb-4">
    <%= t('home.hero_title_1') %> <span class="text-indigo-600"><%= t('home.hero_title_2') %></span> ðŸ§‰
  </h1>
  <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
    <%= t('home.hero_subtitle') %>
  </p>
  <a href="<%= products_path %>" class="inline-block bg-indigo-600 hover:bg-indigo-700 text-white font-semibold px-8 py-4 rounded-lg text-lg transition duration-200">
    <%= t('home.view_products') %>
  </a>
</div>

<!-- CategorÃ­as destacadas -->
<div class="py-12">
  <h2 class="text-2xl font-bold text-gray-900 mb-8 text-center"><%= t('home.categories_title') %></h2>

  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
    <% Category.all.each do |category| %>
      <a href="<%= products_path(category: category.slug) %>" class="block bg-white rounded-lg shadow p-6 text-center hover:shadow-lg transition duration-200">
        <span class="text-3xl mb-2 block">
          <%= category_emoji(category.slug) %>
        </span>
        <span class="font-medium text-gray-900"><%= category.name %></span>
      </a>
    <% end %>
  </div>
</div>

<!-- Productos destacados -->
<div class="py-12">
  <h2 class="text-2xl font-bold text-gray-900 mb-8 text-center"><%= t('home.featured_title') %></h2>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
    <% Product.available.limit(4).each do |product| %>
      <a href="<%= product_path(product) %>" class="block bg-white rounded-lg shadow overflow-hidden hover:shadow-lg transition duration-200">
        <div class="h-48 bg-gray-200 flex items-center justify-center">
          <% if product.images.attached? %>
            <%= image_tag product.images.first, class: "w-full h-full object-cover" %>
          <% else %>
            <span class="text-6xl">ðŸ“¦</span>
          <% end %>
        </div>
        <div class="p-4">
          <h3 class="font-semibold text-gray-900 mb-1"><%= product.name %></h3>
          <p class="text-gray-500 text-sm mb-2"><%= product.category&.name %></p>
          <p class="text-indigo-600 font-bold text-lg"><%= humanized_money_with_symbol(product.price) %></p>
        </div>
      </a>
    <% end %>
  </div>

  <div class="text-center mt-8">
    <a href="<%= products_path %>" class="text-indigo-600 hover:text-indigo-800 font-medium">
      <%= t('home.view_all') %> â†’
    </a>
  </div>
</div>
