<% content_for :meta_tags do %>
  <%= meta_tags(
    title: t('seo.home_title'),
    description: t('seo.home_description')
  ) %>
<% end %>

<!-- Hero Section -->
<div class="relative">
  <!-- Animated Gradient Blobs -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute -top-40 -left-40 w-96 h-96 bg-purple-300 rounded-full mix-blend-multiply filter blur-3xl opacity-60 animate-blob"></div>
    <div class="absolute -top-40 -right-40 w-96 h-96 bg-yellow-300 rounded-full mix-blend-multiply filter blur-3xl opacity-60 animate-blob animation-delay-2000"></div>
    <div class="absolute -bottom-40 left-1/4 w-96 h-96 bg-pink-300 rounded-full mix-blend-multiply filter blur-3xl opacity-60 animate-blob animation-delay-4000"></div>
    <div class="absolute -bottom-40 right-1/4 w-96 h-96 bg-indigo-300 rounded-full mix-blend-multiply filter blur-3xl opacity-60 animate-blob animation-delay-2000"></div>
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-teal-300 rounded-full mix-blend-multiply filter blur-3xl opacity-40 animate-blob animation-delay-4000"></div>
  </div>

  <div class="text-center py-16 relative">
    <h1 class="text-5xl font-bold text-gray-900 mb-4">
      <%= t('home.hero_title_1') %> <span class="text-indigo-600"><%= t('home.hero_title_2') %></span> ðŸ§‰
    </h1>
    <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
      <%= t('home.hero_subtitle') %>
    </p>
    <a href="<%= products_path %>" class="inline-block bg-indigo-600 hover:bg-indigo-700 text-white font-semibold px-8 py-4 rounded-lg text-lg transition duration-200 shadow-lg hover:shadow-xl">
      <%= t('home.view_products') %>
    </a>
  </div>
</div>

<!-- CategorÃ­as destacadas -->
<div class="py-12">
  <h2 class="text-2xl font-bold text-gray-900 mb-8 text-center"><%= t('home.categories_title') %></h2>

  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
    <% Category.all.each do |category| %>
      <a href="<%= products_path(category: category.slug) %>" class="block bg-white rounded-lg shadow p-6 text-center hover:shadow-lg transition duration-200 group">
        <span class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-indigo-100 text-indigo-600 mb-3 group-hover:bg-indigo-200 transition">
          <%= category_icon(category.icon, size: "w-6 h-6") %>
        </span>
        <span class="block font-medium text-gray-900"><%= category.name %></span>
      </a>
    <% end %>
  </div>
</div>

<!-- Productos destacados -->
<div class="py-12">
  <h2 class="text-2xl font-bold text-gray-900 mb-8 text-center"><%= t('home.featured_title') %></h2>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
    <% Product.available.limit(4).each do |product| %>
      <a href="<%= product_path(product) %>" class="block bg-white rounded-lg shadow overflow-hidden hover:shadow-lg transition duration-200">
        <div class="h-48 bg-gray-200 flex items-center justify-center">
          <% if product.images.attached? %>
            <%= image_tag product.images.first, class: "w-full h-full object-cover" %>
          <% else %>
            <span class="text-6xl">ðŸ“¦</span>
          <% end %>
        </div>
        <div class="p-4">
          <h3 class="font-semibold text-gray-900 mb-1"><%= product.name %></h3>
          <p class="text-gray-500 text-sm mb-2"><%= product.category&.name %></p>
          <p class="text-indigo-600 font-bold text-lg"><%= humanized_money_with_symbol(product.price) %></p>
        </div>
      </a>
    <% end %>
  </div>

  <div class="text-center mt-8">
    <a href="<%= products_path %>" class="text-indigo-600 hover:text-indigo-800 font-medium">
      <%= t('home.view_all') %> â†’
    </a>
  </div>
</div>
