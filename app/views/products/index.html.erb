<div class="mb-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-2">Productos</h1>

  <% if @category %>
    <p class="text-gray-600">
      Categor√≠a: <span class="font-medium"><%= @category.name %></span>
      <a href="<%= products_path %>" class="text-indigo-600 hover:text-indigo-800 ml-2">‚Üê Ver todos</a>
    </p>
  <% end %>
</div>

<!-- Filtros por categor√≠a -->
<div class="mb-8 flex flex-wrap gap-2">
  <a href="<%= products_path %>" class="<%= 'bg-indigo-600 text-white' unless @category %> <%= 'bg-white text-gray-700 hover:bg-gray-100' if @category %> px-4 py-2 rounded-full font-medium transition duration-200">
    Todos
  </a>
  <% Category.all.each do |category| %>
    <a href="<%= products_path(category: category.slug) %>" class="<%= 'bg-indigo-600 text-white' if @category == category %> <%= 'bg-white text-gray-700 hover:bg-gray-100' unless @category == category %> px-4 py-2 rounded-full font-medium transition duration-200">
      <%= category.name %>
    </a>
  <% end %>
</div>

<!-- Grid de productos -->
<% if @products.any? %>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
    <% @products.each do |product| %>
      <a href="<%= product_path(product) %>" class="block bg-white rounded-lg shadow overflow-hidden hover:shadow-lg transition duration-200 group">
        <div class="h-48 bg-gray-200 flex items-center justify-center overflow-hidden">
          <% if product.images.attached? %>
            <%= image_tag product.images.first, class: "w-full h-full object-cover group-hover:scale-105 transition duration-300" %>
          <% else %>
            <span class="text-6xl">üì¶</span>
          <% end %>
        </div>
        <div class="p-4">
          <h3 class="font-semibold text-gray-900 mb-1 group-hover:text-indigo-600 transition duration-200"><%= product.name %></h3>
          <p class="text-gray-500 text-sm mb-2"><%= product.category&.name %></p>
          <div class="flex justify-between items-center">
            <p class="text-indigo-600 font-bold text-lg"><%= humanized_money_with_symbol(product.price) %></p>
            <span class="text-sm text-green-600 font-medium">Disponible</span>
          </div>
        </div>
      </a>
    <% end %>
  </div>
<% else %>
  <div class="text-center py-12">
    <p class="text-gray-500 text-lg">No hay productos disponibles</p>
  </div>
<% end %>
