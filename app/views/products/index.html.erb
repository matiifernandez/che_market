<div class="mb-8">
  <h1 class="text-3xl font-bold text-gray-900 text-center mb-6">Productos</h1>

  <!-- Search bar - prominent and centered -->
  <div class="max-w-2xl mx-auto mb-6" data-controller="search" data-search-url-value="<%= products_path %>">
    <div class="relative">
      <input
        type="text"
        data-search-target="input"
        data-action="input->search#search"
        placeholder="Buscar productos..."
        value="<%= @query %>"
        class="w-full pl-11 pr-11 py-2.5 border-2 border-gray-200 rounded-xl shadow-sm focus:border-gray-300 focus:ring-0 focus:outline-none focus:shadow-md transition-all duration-200"
      >
      <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
      </svg>
      <% if @query.present? %>
        <button type="button" data-action="search#clear" class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600 transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      <% end %>
    </div>
  </div>

  <% if @category %>
    <p class="text-gray-600 text-center">
      Categor√≠a: <span class="font-medium"><%= @category.name %></span>
      <a href="<%= products_path %>" class="text-indigo-600 hover:text-indigo-800 ml-2">‚Üê Ver todos</a>
    </p>
  <% end %>
</div>

<!-- Category filters -->
<div class="mb-8 flex flex-wrap gap-2">
  <a href="<%= products_path(q: @query) %>" class="<%= 'bg-indigo-600 text-white' unless @category %> <%= 'bg-white text-gray-700 hover:bg-gray-100' if @category %> px-4 py-2 rounded-full font-medium transition duration-200">
    Todos
  </a>
  <% Category.all.each do |category| %>
    <a href="<%= products_path(category: category.slug, q: @query) %>" class="<%= 'bg-indigo-600 text-white' if @category == category %> <%= 'bg-white text-gray-700 hover:bg-gray-100' unless @category == category %> px-4 py-2 rounded-full font-medium transition duration-200">
      <%= category.name %>
    </a>
  <% end %>
</div>

<!-- Products grid with Turbo Frame -->
<%= turbo_frame_tag "products-grid", data: { turbo_action: "advance" } do %>
  <% if @query.present? %>
    <p class="text-gray-600 mb-4">
      <%= @products.count %> resultado<%= @products.count != 1 ? 's' : '' %> para "<strong><%= @query %></strong>"
    </p>
  <% end %>

  <% if @products.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      <% @products.each do |product| %>
        <a href="<%= product_path(product) %>" class="block bg-white rounded-lg shadow overflow-hidden hover:shadow-lg transition duration-200 group" data-turbo-frame="_top">
          <div class="h-48 bg-gray-200 flex items-center justify-center overflow-hidden">
            <% if product.images.attached? %>
              <%= image_tag product.images.first, class: "w-full h-full object-cover group-hover:scale-105 transition duration-300" %>
            <% else %>
              <span class="text-6xl">üì¶</span>
            <% end %>
          </div>
          <div class="p-4">
            <h3 class="font-semibold text-gray-900 mb-1 group-hover:text-indigo-600 transition duration-200"><%= product.name %></h3>
            <p class="text-gray-500 text-sm mb-2"><%= product.category&.name %></p>
            <div class="flex justify-between items-center">
              <p class="text-indigo-600 font-bold text-lg"><%= humanized_money_with_symbol(product.price) %></p>
              <span class="text-sm text-green-600 font-medium">Disponible</span>
            </div>
          </div>
        </a>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <p class="text-gray-500 text-lg mt-4">No se encontraron productos</p>
      <% if @query.present? %>
        <p class="text-gray-400 mt-2">Prob√° con otro t√©rmino de b√∫squeda</p>
      <% end %>
    </div>
  <% end %>
<% end %>
